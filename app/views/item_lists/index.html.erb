  <script src="https://cdn.jsdelivr.net/npm/fullcalendar-scheduler@5.3.0/main.min.js"></script>
  <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet'>
  <link href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css' rel='stylesheet'>
  <!-- Add FullCalendar Bootstrap Theme -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.css">
  <!-- Assuming your full_calendar.js file is in the 'javascript' folder -->
  <script src="/assets/full_calendar.js" defer></script>


      <div id="calendar" class='custom-calendar'></div>


<script src='fullcalendar/dist/index.global.js'></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
  var calendarEl = document.getElementById('calendar');

  var calendar = new FullCalendar.Calendar(calendarEl, {
    // Your other FullCalendar options here
    selectable: true,
    select: function (info) {
      // Redirect to the new page for filling in details
      window.location.href = '/product_information/new?date=' + info.start.toISOString();
    },
  });

  calendar.render();
});




</script>
      <div class="table-container">
      <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
          <tr>
            <th>Product</th>
            <th>Calories</th>
            <th>Price</th>
            <th><%= link_to "add", new_item_list_path, class:"btn btn-dark" %> </th>
          </tr>
        </thead>

        <tbody>
          <% @item_lists.each do |item_list| %>
          <% if item_list.user == current_user %>
            <tr>
              <td><%= item_list.prod_name %></td>
              <td><%= item_list.mg %></td>
              <td><%= item_list.price %></td>
              <td>
                <div class="d-flex align-items-center">
                  <%= button_to 'Удалить', item_list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm', onclick: "return confirm('Вы уверены?');" %>
                </div>
              </td>
            </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>


<%else %>
